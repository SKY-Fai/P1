modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run start"]
build = ["sh", "-c", "npm run build"]

[objectStorage]
defaultBucketID = "fai-accountant-storage"

[[ports]]
localPort = 5000
externalPort = 80

[env]
PYTHONPATH = "$REPL_HOME"
FLASK_ENV = "production"
FLASK_APP = "main.py"

# GCP Storage Configuration
GCS_BUCKET_NAME = "fai-accountant-storage"
GCS_PROJECT_ID = "replit-gcs-project"
GCS_REGION = "us-central1"

# Security Configuration  
SECRET_KEY = "your-secret-key-here"
DATABASE_URL = "sqlite:///database/fai_accountant.db"

# Compliance and Audit
AUDIT_LOGGING_ENABLED = "true"
RETENTION_DAYS = "2555"
ENCRYPTION_ENABLED = "true"

[workflows]
runButton = "Fixed F-AI Preview"

[[workflows.workflow]]
name = "F-AI Accountant Server"
author = 44663263
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

